<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/openOfferRL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rectangle"
    android:padding="10dp"
    android:clickable="true"
    android:onClick="openOffer"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/title_textView"
        android:text="Title"
        android:gravity="start"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/read_layout"
        android:textAppearance="?android:textAppearanceMedium"
        android:background="@drawable/read_circle"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/dashed_divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/dashed_line"
        android:layout_below="@id/title_textView"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_textView"
        android:layout_below="@id/dashed_divider"
        android:text="Name"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/creationDate_textView"
        android:layout_below="@id/dashed_divider"
        android:text="Date"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address_textView"
        android:layout_below="@id/name_textView"
        android:text="Address"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:textColor="#000000"
        />

</RelativeLayout>