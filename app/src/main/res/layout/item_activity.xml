<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/item_rectangle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:id="@+id/item_title"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Title"/>

        <TextView
            android:id="@+id/item_dashed_divider"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dashed_line"
            android:layout_below="@id/item_title"/>

        <TextView
            android:id="@+id/item_user_name"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_dashed_divider"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="User name"
            />

        <TextView
            android:id="@+id/item_address"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_user_name"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="Address"
            />

        <TextView
            android:id="@+id/item_distance"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_address"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="Distance"
            />

        <TextView
            android:id="@+id/item_dashed_divider2"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dashed_line"
            android:layout_below="@id/item_distance"/>

        <ListView
            android:id="@+id/questions_list"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_dashed_divider2"
            android:divider="#FFFFFF"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:background="@drawable/refuse_button"
            android:text="Recusar"
            android:textAppearance="?android:textAppearanceLarge"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:background="@drawable/accept_button"
            android:text="Aceitar"
            android:textAppearance="?android:textAppearanceLarge"
            />

    </LinearLayout>


</RelativeLayout>